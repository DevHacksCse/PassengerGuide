<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Found Item"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#D4D2D2"
        android:padding="20dp"
        android:textStyle="bold"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="150dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Row 1 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:text="Date"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:background="#f6f6f6"
            android:layout_rowWeight="1"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/selectedDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/selectDateImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendarpng" />

            </RelativeLayout>

        </RelativeLayout>

        <!-- Row 2 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:textSize="22dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Station"/>

        <EditText
            android:id="@+id/stationNameEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="#f6f6f6"
            android:layout_margin="20dp"/>

        <!-- Row 3 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="Photo"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="3"
            android:layout_margin="20dp"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="#f6f6f6"/>

            <ImageView
                android:id="@+id/captureOrSelectImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/add"
                android:text="Capture/Select" />

        </RelativeLayout>

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadDataButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/box"
        android:textSize="26dp"
        android:text="Submit"/>
</RelativeLayout>
